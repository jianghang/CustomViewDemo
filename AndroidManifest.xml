<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.customviewdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListViewSimpleActivity"
            android:label="@string/title_activity_list_view_simple"
            android:uiOptions="none" >
        </activity>
        <activity
            android:name=".ChatListViewActivity"
            android:label="@string/title_activity_chat_list_view"
            android:windowSoftInputMode="adjustPan|stateHidden" >
        </activity>
        <activity
            android:name=".DynamicListViewActivity"
            android:label="@string/title_activity_dynamic_list_view" >
        </activity>
        <activity
            android:name=".DragViewActivity"
            android:label="@string/title_activity_drag_view" >
        </activity>
        <activity
            android:name=".DragViewHelperActivity"
            android:label="@string/title_activity_drag_view_helper" >
        </activity>
        <activity
            android:name=".BitmapColorActivity"
            android:label="@string/title_activity_bitmap_color" >
        </activity>
        <activity
            android:name=".PorterDuffXfermodeActivity"
            android:label="@string/title_activity_porter_duff_xfermode" >
        </activity>
        <activity
            android:name=".PhotoWallActivity"
            android:label="@string/title_activity_photo_wall" >
        </activity>
        <activity
            android:name=".PhotoViewActivity"
            android:label="@string/title_activity_photo_view" >
        </activity>
    </application>

</manifest>
